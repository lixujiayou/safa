<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    >

    <LinearLayout
        android:id="@+id/ll_his"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="6dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="巡检内容:"
            android:textSize="@dimen/textsize_16"
            />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >
        <ImageView
            android:id="@+id/iv_xunjian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_no_xunjian"
            />
        <TextView
            android:id="@+id/item_his_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:layout_margin="4dp"
            />
</LinearLayout>
         <TextView
            android:id="@+id/item_his_length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
             android:layout_margin="4dp"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_x"
            android:background="@color/colorPrimary"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/icon_backround"
        android:layout_marginTop="14dp"
        android:visibility="visible"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_x"
            android:background="@color/colorPrimary"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_search"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="@color/textsize_qian"
                android:textSize="@dimen/textsize_16"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/item_noreceive_tv_bnum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="@color/textsize_qian"
                android:textSize="@dimen/textsize_16"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/item_noreceive_tv_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textsize_16"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:background="@drawable/blue_btn_bg_kong"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_x"
            android:background="@drawable/line_xu"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            >
            <ImageView
                android:id="@+id/item_noreceive_iv_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_rceive_no"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/item_noreceive_tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/textsize_18"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    />
                <TextView
                    android:id="@+id/item_noreceive_tv_name2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/textsize_18"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    />


            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_d"
            android:background="@color/line_color"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_search_2"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_sendperson"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="已巡检长度:"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/textsize_qian"
                android:layout_marginLeft="4dp"
                />

            <TextView
                android:id="@+id/item_noreceive_tv_person"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/textsize_qian"
                android:layout_marginLeft="4dp"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_buildtime"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="未巡检长度:"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/textsize_qian"
                android:layout_marginLeft="4dp"
                />

            <TextView
                android:id="@+id/item_noreceive_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2015-08-08 12:30:36"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/textsize_qian"
                android:layout_marginLeft="4dp"
                />




        </LinearLayout>
    </LinearLayout>
</LinearLayout>